<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Editing Subject/Área</h1>
  </div>
</div>

<div class="row">
<% if @subject.errors.any? %>
  <div class="alert alert-danger" style="margin: auto; width: 80%; height: auto; text-align: left;" role="alert">
    <ul>
      <% @subject.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>
          <div class="mb-3">
            <%= form.label :description, class:"form-label" %>
            <%= form.text_field :description, class:"form-control", placeholder:"Física Nuclear" %>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        <% end %>
      </div>
    </div>
  </div>
</div>