<div class="container-fluid text-sm-left p-5 bg-primary rounded bg-opacity-25">
  <p id="notice"><%= notice %></p>
  
  <p>
    <strong>Description:</strong>
    <%= @coin.description %>
  </p>
  
  <p>
    <strong>Acronym:</strong>
    <%= @coin.acronym %>
  </p>
  
  <p>
    <strong>Url image:</strong>
    <%= image_tag @coin.url_image, size: "25x25"%>
  </p>
  
  <p>
    <strong>Mining Type:</strong>
    <%= @mining_type %>
  </p>
  
  <%= link_to t('edit.coin'), edit_coin_path(@coin), class: "btn btn-primary btn-sm" %> |
  <%= link_to t('links.back'), coins_path, class: "btn btn-primary btn-sm" %>
</div>
