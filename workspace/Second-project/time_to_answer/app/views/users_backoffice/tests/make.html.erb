

<h3><%= @test.description %></h3>

  <%= form_with url: users_backoffice_path, local: true do |f| %>
    <% @questions.each do |question| %>
      <div class="card" style="margin: 10px">
        <h5 class="card-header">
          Questão
          <%= question.id  %> 
        </h5>
        <div class="card-body">
          <h5 class="card-title"><%= sanitize question.description %></h5>
          <ul style="list-style:none;">
          <%= f.fields_for :answers do |answer| %>
           <div class="nested-fields">
            <br> 
              <br>
              <% question.answers.each do |answer| %>
                <%= radio_button_tag "form_questions[#{question.id}][]", answer.id %>
                <%=h sanitize answer.description %><br />
              <% end %>
            </div>
          <% end %>
              
              <hr>
          </ul>
        </div>
      </div>
    <% end %>
    <%= f.submit "Finalizar Avaliação", class:"btn btn-primary" %>
<% end %>



