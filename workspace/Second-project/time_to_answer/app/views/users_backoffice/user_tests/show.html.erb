<h1>olá</h1>
<div class="x_title" style="width: 100%">
  <h3 style="text-align: center">Testes Realizados</h3> 
  <h1>
    <%= @user_test.test.description %> 
    <br><br>
    <sub>
      <small class="btn btn-primary" >
        Nota: 
      </small> 
      <small class="btn btn-info btn-sm" style="border: transparent">
        Respostas corretas * de * 
      </small>
    </sub>
  </h1>
  <div class="clearfix"></div>
</div>

  <% @user_test.test.questions.each do |question| %>
    <div class="card" style="margin: 10px">
      <h5 class="card-header">
        Questão
        <%= question.id  %> 
      </h5>
      <div class="card-body">
        <h5 class="card-title"><%= sanitize question.description %></h5>
        <ul style="list-style:none;">
          <div class="nested-fields">
          <br> 
            <br>
            <% question.answers.each do |answer| %>
              <%= radio_button_tag "form_questions[#{question.id}][]", answer.id, (@user_answers.include?(answer.id)), disabled: true %>
              <%=h sanitize answer.description %><br />
            <% end %>
          </div>
            <hr>
        </ul>
      </div>
    </div>
  <% end %>
